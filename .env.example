# AuraFace 環境配置範例
# 複製此檔案為 .env 並修改相應設定

# 資料庫連接
DATABASE_URL=postgresql://auraface:auraface123@localhost:5432/auraface

# 人臉識別參數
RECOGNITION_THRESHOLD=0.6
MAX_FACE_SIZE=640
GPU_ENABLED=true

# WebSocket 設定
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
WEBSOCKET_MAX_CONNECTIONS=10

# Gradio 設定
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false

# 效能調優
MAX_WORKERS=4
BATCH_SIZE=1
FRAME_SKIP=1

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE=logs/auraface.log

# 安全設定
ALLOWED_ORIGINS=*
API_KEY=your-secure-api-key